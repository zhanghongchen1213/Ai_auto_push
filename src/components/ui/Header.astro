<script>
  // Collect valid domain slugs from the rendered tabs (single source of truth)
  function getValidDomains(): Set<string> {
    const tabs = document.querySelectorAll('[role="tablist"] [role="tab"]');
    const slugs = new Set<string>();
    tabs.forEach((tab) => {
      const d = tab.getAttribute('data-domain');
      if (d) slugs.add(d);
    });
    return slugs;
  }

  // AbortController for cleaning up listeners between page transitions
  let filterAbort: AbortController | null = null;

  function initDomainFilter() {
    // Tear down previous listeners to prevent accumulation (Issue #2 fix)
    if (filterAbort) {
      filterAbort.abort();
    }
    filterAbort = new AbortController();
    const { signal } = filterAbort;

    const tablist = document.querySelector('[role="tablist"]');
    if (!tablist) return;

    const tabs = Array.from(
      tablist.querySelectorAll('[role="tab"]'),
    ) as HTMLElement[];
    const sections = Array.from(
      document.querySelectorAll('.domain-section[data-domain]'),
    ) as HTMLElement[];
    const validDomains = getValidDomains();

    // Read initial domain from URL params with validation (Issue #1 fix)
    function getUrlDomain(): string {
      const params = new URLSearchParams(window.location.search);
      const raw = params.get('domain');
      if (raw === null) return 'all';
      // Only accept known domain slugs; reject anything else
      return validDomains.has(raw) ? raw : 'all';
    }

    // Update URL without creating history entry
    function syncUrl(domain: string): void {
      const url = new URL(window.location.href);
      if (domain === 'all') {
        url.searchParams.delete('domain');
      } else {
        url.searchParams.set('domain', domain);
      }
      history.replaceState(null, '', url.toString());
    }

    // Apply filter: update pills + show/hide sections
    function applyFilter(domain: string): void {
      // Validate domain before applying (Issue #1 fix)
      if (domain !== 'all' && !validDomains.has(domain)) {
        domain = 'all';
      }

      // Update pill states
      tabs.forEach((tab) => {
        const tabDomain = tab.getAttribute('data-domain') ?? '';
        const isActive = tabDomain === domain;
        tab.classList.toggle('pill-active', isActive);
        tab.setAttribute('aria-selected', isActive ? 'true' : 'false');
        tab.setAttribute('tabindex', isActive ? '0' : '-1');
      });

      // Show/hide domain sections + update aria-hidden (Issue #5 fix)
      sections.forEach((section) => {
        const sectionDomain = section.getAttribute('data-domain') ?? '';
        const shouldHide = domain !== 'all' && sectionDomain !== domain;
        section.classList.toggle('domain-hidden', shouldHide);
        section.setAttribute('aria-hidden', shouldHide ? 'true' : 'false');
      });

      syncUrl(domain);
    }

    // Click handler for pills (with signal for cleanup)
    tabs.forEach((tab) => {
      tab.addEventListener(
        'click',
        () => {
          const domain = tab.getAttribute('data-domain') ?? 'all';
          applyFilter(domain);
        },
        { signal },
      );
    });

    // Keyboard navigation (WAI-ARIA Tabs pattern)
    tablist.addEventListener(
      'keydown',
      (e) => {
        const event = e as KeyboardEvent;
        const current = document.activeElement as HTMLElement;
        const idx = tabs.indexOf(current);
        if (idx === -1) return;

        let next = -1;
        if (event.key === 'ArrowRight') {
          next = (idx + 1) % tabs.length;
        } else if (event.key === 'ArrowLeft') {
          next = (idx - 1 + tabs.length) % tabs.length;
        } else if (event.key === 'Home') {
          next = 0;
        } else if (event.key === 'End') {
          next = tabs.length - 1;
        }

        if (next !== -1) {
          event.preventDefault();
          tabs[next].focus();
          // Arrow keys also activate the tab (Issue #3 fix)
          const domain = tabs[next].getAttribute('data-domain') ?? 'all';
          applyFilter(domain);
        }

        // Enter or Space activates the focused pill
        if (event.key === 'Enter' || event.key === ' ') {
          event.preventDefault();
          const domain = current.getAttribute('data-domain') ?? 'all';
          applyFilter(domain);
        }
      },
      { signal },
    );

    // Restore filter state from URL on page load
    const initialDomain = getUrlDomain();
    if (initialDomain !== 'all') {
      applyFilter(initialDomain);
    }
  }

  // Run on initial load and on Astro page transitions
  initDomainFilter();
  document.addEventListener('astro:after-swap', initDomainFilter);
</script>

<script>
  // Header search box: empty-input guard, keyword echo, Escape key
  let searchAbort: AbortController | null = null;

  /** Sanitize user input: strip angle brackets to prevent XSS vectors */
  function sanitizeSearchQuery(raw: string): string {
    return raw.replace(/[<>]/g, '').trim().slice(0, 200);
  }

  function initHeaderSearch(): void {
    if (searchAbort) searchAbort.abort();
    searchAbort = new AbortController();
    const { signal } = searchAbort;

    const forms = document.querySelectorAll<HTMLFormElement>(
      '.header .search-box',
    );
    if (forms.length === 0) return;

    // Echo current ?q= param into all header search inputs (sanitized)
    const params = new URLSearchParams(window.location.search);
    const currentQuery = sanitizeSearchQuery(params.get('q') ?? '');

    forms.forEach((form) => {
      const input = form.querySelector<HTMLInputElement>('input[name="q"]');
      if (!input) return;

      // Keyword echo: fill input with sanitized query from URL
      if (currentQuery) {
        input.value = currentQuery;
      }

      // Empty input guard: block submit when value is blank
      form.addEventListener(
        'submit',
        (e: SubmitEvent) => {
          const trimmed = input.value.trim();
          if (!trimmed) {
            e.preventDefault();
            input.focus();
            // Accessible feedback: set temporary validation message
            input.setAttribute('aria-invalid', 'true');
            input.setAttribute('title', 'è¯·è¾“å…¥æœç´¢å…³é”®è¯');
            // Clear aria-invalid after user starts typing
            const clearInvalid = () => {
              input.removeAttribute('aria-invalid');
              input.removeAttribute('title');
              input.removeEventListener('input', clearInvalid);
            };
            input.addEventListener('input', clearInvalid, { signal });
          }
        },
        { signal },
      );

      // Escape key: clear input and blur
      input.addEventListener(
        'keydown',
        (e: KeyboardEvent) => {
          if (e.key === 'Escape') {
            e.preventDefault();
            input.value = '';
            input.blur();
          }
        },
        { signal },
      );
    });
  }

  // Use a module-level flag to prevent duplicate astro:after-swap listeners
  // (Issue #4: script re-execution could accumulate listeners)
  if (!(window as any).__headerSearchBound) {
    (window as any).__headerSearchBound = true;
    document.addEventListener('astro:after-swap', initHeaderSearch);
  }
  initHeaderSearch();
</script>
